{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "Path": "./Data/soundy.db"
  },
  "Storage": {
    "MusicDir": "./Data/music",
    "CoversDir": "./Data/covers",
    "UploadMaxSize": 104857600
  },
  "Server": {
    "Host": "0.0.0.0",
    "Port": "8080"
  },
  "Security": {
    "JwtSecret": "your-secret-key-change-in-production-must-be-32-chars-long",
    "AdminUsername": "admin",
    "AdminPassword": "admin123",
    "SessionDurationHours": 24
  },
  "RateLimit": {
    "Requests": 100,
    "WindowSeconds": 60
  },
  "CORS": {
    "Origins": [
      "http://localhost:3000",
      "http://localhost:8080"
    ],
    "AllowCredentials": true
  }
}